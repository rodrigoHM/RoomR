<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBedNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bed Number:"

                />

            <Spinner
                android:id="@+id/spnBedNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/bedNumbers" />

            <TextView
                android:id="@+id/txtBathNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Bath Number:" />


            <Spinner
                android:id="@+id/spnBathNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/bathNumbers" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Size:" />

            <EditText
                android:id="@+id/edtSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:id="@+id/txtSQRT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="sqft"
                tools:layout_editor_absoluteX="313dp"
                tools:layout_editor_absoluteY="90dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/txtAmenitiesLabelLHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amenities:" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkWasherDryerL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Washer/Dryer" />

            <CheckBox
                android:id="@+id/chkAirConditioningL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Conditioning" />

            <CheckBox
                android:id="@+id/chkSmokingL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smoking" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkInternetL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet" />

            <CheckBox
                android:id="@+id/chkBalconyL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balcony" />

            <CheckBox
                android:id="@+id/chkSnowRemovalL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snow Removal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkParkingL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking" />

            <CheckBox
                android:id="@+id/chkPoolL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pool" />

            <CheckBox
                android:id="@+id/chkPetL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pets" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtDescriptionLHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:" />

        <EditText
            android:id="@+id/edtDescriptionLHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnNextLHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next" />


    </LinearLayout>

</FrameLayout>