<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandlordFragments.SlottingLandlord">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.ryan.roomrep.LandlordFragments.SlottingLandlord">

        <com.example.ryan.roomrep.Classes.SimpleLineChart
            android:id="@+id/simpleLineChartLandlord"
            android:layout_width="400dp"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/buttonYearLandlord"
            style="@style/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plottingImgName"
            android:layout_toRightOf="@id/buttonMonthLandlord"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:text="Year" />

        <Button
            android:id="@+id/buttonMonthLandlord"
            style="@style/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plottingImgName"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Month" />

        <TextView
            android:id="@+id/plottingImgName"
            style="@style/general_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/simpleLineChartLandlord"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="22dp"
            android:text="Payment Speed Rating" />
    </RelativeLayout>

</FrameLayout>