<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgRepairRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/txt_dateRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgRepairRow"
        app:layout_constraintTop_toBottomOf="@+id/txt_problemRow" />

    <TextView
        android:id="@+id/txt_problemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgRepairRow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_descriptionRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgRepairRow"
        app:layout_constraintTop_toBottomOf="@+id/txt_dateRow" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgRepairRow"
        app:layout_constraintTop_toBottomOf="@+id/txt_descriptionRow" />

</android.support.constraint.ConstraintLayout>